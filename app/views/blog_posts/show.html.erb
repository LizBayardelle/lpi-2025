<% content_for :title, @blog_post.title %>
<% content_for :meta_description, @blog_post.teaser %>

<article class="min-h-screen bg-white">
  <!-- Hero Section with Parallax -->
  <section class="relative h-[60vh] md:h-[70vh] overflow-hidden">
    <% if @blog_post.featured_image.attached? %>
      <div class="absolute inset-0">
        <%= image_tag @blog_post.featured_image, 
            alt: @blog_post.title, 
            class: "w-full h-full object-cover",
            style: "object-position: center" %>
        <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/70"></div>
      </div>
    <% else %>
      <div class="absolute inset-0 bg-gradient-to-br from-slate-800 to-slate-900"></div>
    <% end %>

    <!-- Back Button -->
    <div class="absolute top-24 left-8 z-20">
      <%= link_to blog_path, class: "inline-flex items-center text-white/90 hover:text-white transition-colors bg-black/20 backdrop-blur-sm rounded-lg px-4 py-2" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m7 7h18"></path>
        </svg>
        Back to Blog
      <% end %>
    </div>

    <!-- Hero Content -->
    <div class="relative z-10 h-full flex items-center justify-center">
      <div class="container-custom px-4 sm:px-6 lg:px-8 text-center">
        <div class="max-w-4xl mx-auto">
          
          <!-- Meta -->
          <div class="mb-4">
            <time datetime="<%= @blog_post.published_at&.iso8601 %>" class="text-white/80 font-medium">
              <%= @blog_post.published_at&.strftime("%B %d, %Y") %>
            </time>
          </div>

          <!-- Title -->
          <h1 class="font-display text-4xl md:text-5xl lg:text-6xl font-light text-white mb-6 leading-tight tracking-tight">
            <%= @blog_post.title %>
          </h1>

          <!-- Teaser -->
          <p class="text-xl md:text-2xl text-white/90 leading-relaxed max-w-3xl mx-auto">
            <%= @blog_post.teaser %>
          </p>

        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-white/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Content -->
  <section class="py-16">
    <div class="container-custom px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <div class="prose prose-lg prose-slate max-w-none">
          <%= @blog_post.content_html %>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-slate-900">
    <div class="container-custom px-4 sm:px-6 lg:px-8 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-white mb-6">
          Liked What You Read?
        </h2>
        <p class="text-xl text-slate-300 mb-8">
          Let's chat about how we can help you build something custom for your business.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <%= link_to "Get Free Proposal", new_rfp_path, class: "btn-secondary" %>
          <%= link_to "Schedule a Chat", contact_path, class: "btn-primary" %>
        </div>
      </div>
    </div>
  </section>

</article>